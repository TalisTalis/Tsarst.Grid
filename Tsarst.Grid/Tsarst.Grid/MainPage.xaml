<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tsarst.Grid.MainPage">

    <Grid Margin="20,35,20,20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5"/>
            <ColumnDefinition Width="0.5"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Label Text="Колонка 0, Строка 0"/>

        <Label Grid.Column="1"
               Text="Колонка 1, Строка 0"/>

        <Label Grid.Row="1"
               Text="Колонка 0, Строка 1"/>

        <Label Grid.Column="1" 
               Grid.Row="1"
               Text="Колонка 1, Строка 1"/>
    </Grid>

</ContentPage>
